<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >


    <EditText
        android:id="@+id/task_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:textColor="@null"
        android:textSize="16sp"
        android:text=""
        android:layout_toStartOf="@+id/time_field"
        android:background="@null" />

    <EditText
        android:id="@+id/desc_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description_line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/task_field"
        android:layout_marginLeft="8dp"
        android:textColor="@null"
        android:textSize="16sp"
        android:text=""
        android:background="@null"/>

    <EditText
        android:id="@+id/time_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desc_field"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/time_line"
        android:layout_toStartOf="@+id/check_task_done"
        android:background="@null"/>

    <TextView
        android:id="@+id/task_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toStartOf="@+id/time_field"
        android:text="Task name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/check_task_done"
        android:text="Task time"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/description_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/task_line"
        android:layout_marginLeft="8dp"
        android:text="Description"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/check_task_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_delete_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/button_delete_list"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/time_line"
        android:layout_toEndOf="@+id/time_line" />

</RelativeLayout>
